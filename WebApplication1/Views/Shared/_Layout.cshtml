<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sistema de Parqueadero SENA</title>
    
    <!-- CSS Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    
    <!-- Toastr for notifications -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    @RenderSection("Styles", required: false)

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header class="navbar navbar-expand-lg navbar-dark" style="background: linear-gradient(135deg, var(--primary-color), #4338ca);">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" href="@(User.IsInRole("Funcionario") ? Url.Action("Dashboard", "Funcionario") : Url.Action("Dashboard", "Aprendiz"))">
                    <img src="~/images/sena-logo.png" alt="SENA" height="40" class="me-2">
                    <div>
                        <div class="fw-bold">Sistema de Parqueadero</div>
                        <small class="opacity-75">SENA</small>
                    </div>
                </a>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        @if (User.IsInRole("Funcionario"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "Funcionario")">
                                    <i class="fas fa-tachometer-alt"></i> Dashboard
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-car"></i> Parqueadero
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Parqueos")">
                                        <i class="fas fa-list"></i> Historial Parqueos</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Reservas")">
                                        <i class="fas fa-bookmark"></i> Reservas</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Tarifas")">
                                        <i class="fas fa-dollar-sign"></i> Tarifas</a></li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-users"></i> Usuarios
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Usuarios")">
                                        <i class="fas fa-user-friends"></i> Gestión Usuarios</a></li>
                                    <li><a class="dropdown-item" href="@Url.Action("Index", "Vehiculos")">
                                        <i class="fas fa-car"></i> Vehículos</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Reportes")">
                                    <i class="fas fa-chart-bar"></i> Reportes
                                </a>
                            </li>
                        }
                        else if (User.IsInRole("Aprendiz"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Dashboard", "Aprendiz")">
                                    <i class="fas fa-home"></i> Mi Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Vehiculos")">
                                    <i class="fas fa-car"></i> Mis Vehículos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Reservas")">
                                    <i class="fas fa-bookmark"></i> Mis Reservas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index", "Parqueos")">
                                    <i class="fas fa-history"></i> Mi Historial
                                </a>
                            </li>
                        }
                    </ul>
                    
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="fas fa-user-circle fa-lg me-1"></i>
                                @User.Identity.Name
                                <span class="badge bg-light text-primary ms-2">@(User.IsInRole("Funcionario") ? "Funcionario" : "Aprendiz")</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><h6 class="dropdown-header">Mi Cuenta</h6></li>
                                <li><a class="dropdown-item" href="#">
                                    <i class="fas fa-user-cog"></i> Mi Perfil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item text-danger">
                                            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </header>
    }
    @if (User.Identity.IsAuthenticated)
    {
        <main class="main-content">
            @RenderBody()
        </main>
        
        <footer class="footer mt-5 py-4" style="background-color: var(--bg-secondary); border-top: 1px solid #e2e8f0;">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <img src="~/images/sena-logo.png" alt="SENA" height="30" class="me-2">
                            <div>
                                <div class="fw-bold text-primary">Sistema de Parqueadero SENA</div>
                                <small class="text-muted">&copy; 2025 - Servicio Nacional de Aprendizaje</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small class="text-muted">
                            Desarrollado con <i class="fas fa-heart text-danger"></i> para la comunidad SENA
                        </small>
                    </div>
                </div>
            </div>
        </footer>
    }
    else
    {
        <main>
            @RenderBody()
        </main>
    }
    
    <!-- JavaScript Libraries -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <!-- Custom Scripts -->
    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/js/forms.js" asp-append-version="true"></script>
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
