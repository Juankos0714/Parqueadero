@{
    ViewData["Title"] = "Sistema de Parqueadero SENA";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="landing-page">
        <div class="hero-section">
            <div class="container">
                <div class="row align-items-center min-vh-100">
                    <div class="col-lg-6 text-center text-lg-start">
                        <div class="hero-content">
                            <div class="brand-section mb-4">
                                <img src="~/images/sena-logo.png" alt="SENA" class="hero-logo mb-3" />
                                <h1 class="hero-title">Sistema de Gestión de Parqueadero</h1>
                                <h2 class="hero-subtitle">SENA - Servicio Nacional de Aprendizaje</h2>
                            </div>
                            
                            <p class="hero-description">
                                Plataforma moderna y eficiente para la gestión integral del parqueadero institucional.
                                Controla entradas, salidas, reservas y genera reportes de manera automatizada.
                            </p>
                            
                            <div class="hero-actions mt-4">
                                <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-sign-in-alt"></i>
                                    Iniciar Sesión
                                </a>
                                <a href="#features" class="btn btn-outline-primary btn-lg">
                                    <i class="fas fa-info-circle"></i>
                                    Conocer Más
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-lg-6 text-center">
                        <div class="hero-image">
                            <div class="feature-preview">
                                <div class="dashboard-mockup">
                                    <div class="mockup-header">
                                        <div class="mockup-dots">
                                            <span></span><span></span><span></span>
                                        </div>
                                    </div>
                                    <div class="mockup-content">
                                        <div class="metric-card-mini">
                                            <i class="fas fa-car"></i>
                                            <div class="metric-info">
                                                <h4>15 / 20</h4>
                                                <p>Carros</p>
                                            </div>
                                        </div>
                                        <div class="metric-card-mini">
                                            <i class="fas fa-motorcycle"></i>
                                            <div class="metric-info">
                                                <h4>8 / 20</h4>
                                                <p>Motos</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Features Section -->
        <section id="features" class="features-section py-5">
            <div class="container">
                <div class="text-center mb-5">
                    <h3 class="section-title">Funcionalidades del Sistema</h3>
                    <p class="section-subtitle">Herramientas diseñadas para optimizar la gestión del parqueadero</p>
                </div>
                
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-tachometer-alt"></i>
                            </div>
                            <h4>Dashboard en Tiempo Real</h4>
                            <p>Monitorea la ocupación del parqueadero, ingresos y estadísticas actualizadas automáticamente.</p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-user-friends"></i>
                            </div>
                            <h4>Gestión por Roles</h4>
                            <p>Diferentes interfaces para aprendices y funcionarios con funcionalidades específicas.</p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-chart-bar"></i>
                            </div>
                            <h4>Reportes Avanzados</h4>
                            <p>Genera reportes detallados con gráficos interactivos y exportación a Excel/PDF.</p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-search"></i>
                            </div>
                            <h4>Búsqueda Instantánea</h4>
                            <p>Encuentra vehículos registrados al instante usando la placa o información del propietario.</p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-bookmark"></i>
                            </div>
                            <h4>Sistema de Reservas</h4>
                            <p>Los aprendices pueden reservar espacios de parqueo por tiempo limitado.</p>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <div class="feature-card">
                            <div class="feature-icon">
                                <i class="fas fa-mobile-alt"></i>
                            </div>
                            <h4>Diseño Responsivo</h4>
                            <p>Funciona perfectamente en computadoras, tablets y dispositivos móviles.</p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Quick Access Section -->
        <section class="quick-access-section py-5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <h3 class="mb-3">¿Listo para comenzar?</h3>
                        <p class="mb-0">Accede al sistema con tus credenciales institucionales y comienza a gestionar el parqueadero de manera eficiente.</p>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a href="@Url.Action("Register", "Account")" class="btn btn-success btn-lg">
                            <i class="fas fa-rocket"></i>
                            Acceder al Sistema
                        </a>
                    </div>
                </div>
            </div>
        </section>
        
        <!-- Footer -->
        <footer class="landing-footer py-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center">
                            <img src="~/images/sena-logo.png" alt="SENA" height="30" class="me-2">
                            <div>
                                <div class="fw-bold">Sistema de Parqueadero SENA</div>
                                <small class="text-muted">&copy; 2025 - Servicio Nacional de Aprendizaje</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 text-md-end">
                        <small class="text-muted">
                            Desarrollado con <i class="fas fa-heart text-danger"></i> para la comunidad SENA
                        </small>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    
    <style>
        .landing-page {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }

            .hero-section::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="%23ffffff08" points="0,1000 1000,0 1000,1000"/></svg>') no-repeat center center;
                background-size: cover;
            }

        .hero-content {
            position: relative;
            z-index: 2;
        }

        .hero-logo {
            width: 80px;
            height: auto;
            filter: drop-shadow(0 4px 8px rgba(0,0,0,0.3));
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 0.5rem;
        }

        .hero-subtitle {
            font-size: 1.25rem;
            font-weight: 300;
            opacity: 0.9;
            margin-bottom: 2rem;
        }

        .hero-description {
            font-size: 1.1rem;
            line-height: 1.6;
            opacity: 0.9;
            max-width: 500px;
        }

        .hero-actions .btn {
            padding: 1rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .hero-actions .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.3);
            }

        /* Dashboard Mockup */
        .dashboard-mockup {
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
            max-width: 400px;
            margin: 0 auto;
            overflow: hidden;
            transform: perspective(1000px) rotateY(-5deg) rotateX(10deg);
            transition: transform 0.3s ease;
        }

            .dashboard-mockup:hover {
                transform: perspective(1000px) rotateY(0deg) rotateX(0deg);
            }

        .mockup-header {
            background: #f8fafc;
            padding: 1rem;
            border-bottom: 1px solid #e2e8f0;
        }

        .mockup-dots {
            display: flex;
            gap: 0.5rem;
        }

            .mockup-dots span {
                width: 12px;
                height: 12px;
                border-radius: 50%;
                background: #cbd5e0;
            }

                .mockup-dots span:first-child {
                    background: #f56565;
                }

                .mockup-dots span:nth-child(2) {
                    background: #ed8936;
                }

                .mockup-dots span:last-child {
                    background: #48bb78;
                }

        .mockup-content {
            padding: 2rem;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .metric-card-mini {
            display: flex;
            align-items: center;
            background: #f8fafc;
            padding: 1rem;
            border-radius: 12px;
            border-left: 4px solid var(--primary-color);
        }


        </body>
</html>
